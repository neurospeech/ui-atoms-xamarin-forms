<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ns="clr-namespace:NeuroSpeech.UIAtoms.Controls;assembly=NeuroSpeech.UIAtoms"
             x:Class="UIAtomsDemo.Forms.Views.ImagePage">
  <Grid RowSpacing="5" ColumnSpacing="5" Margin="5">

    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>

    <ns:AtomImageCropper
      Grid.ColumnSpan="4"      
      Source="{Binding ImageSource}"
      x:Name="cropper"
      
      />

    <Button 
      Command="{Binding UndoCommand, Source={x:Reference cropper}}"
      IsEnabled="{Binding CanUndo, Source={x:Reference cropper}}"
      Grid.Row="1"
      Text="Undo"/>

    <Button 
      Command="{Binding RotateLeft, Source={x:Reference cropper}}"
      Grid.Row="1"
      Grid.Column="1"
      Text="Left"/>   
      
    <Button 
      Command="{Binding RotateRight, Source={x:Reference cropper}}"
      Grid.Row="1"
      Grid.Column="2"
      Text="Right"/> 
      
    <Button
      Command="{Binding CropCommand, Source={x:Reference cropper}}"
      Grid.Row="1"
      Grid.Column="3"
      Text="Crop"/>
    
  </Grid>
</ContentPage>